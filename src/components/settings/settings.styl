@require '~styles/colors'

.settings-container, .display-options-container
  display: flex
  flex-direction: column

.settings-container
  padding 15px
  align-items: flex-end

.settings-block
  margin-bottom: 30px
  &:last-child
    margin-bottom: 0

.block-header
  margin: 0 0 15px

.display-options-container
  width: 100%

.files-selector
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height 300px
  border: 1px dashed $border-color-light
  &:hover
    border-color: $border-color-dark
  #select-files
    z-index: -1000
    position: absolute
    opacity: 0

.default-button
  border: 1px solid $border-color-light
  border-radius: 5px
  padding: 10px 15px
  background: transparent
  cursor: pointer
  &:hover
    border-color: $border-color-dark
