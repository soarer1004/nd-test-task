@require '~styles/colors'
@require '~styles/responsive'
@require '~styles/sizes'

.settings-container, .display-options-container
  display: flex
  flex-direction: column

.settings-container
  padding 15px
  align-items: flex-end
  flex: 1
  min-width: 250px
  background: $background-color-light
  +mobile()
    &.mobile-menu
      position: absolute
      top: $mobile-header-height
      height: 'calc(100% - %s - %s * 2)' % ($mobile-header-height @padding)
      left: 0
      width: 250px
      border-right: 1px solid $border-color-dark
      z-index: 10

.settings-block
  margin-bottom: 30px
  &:last-child
    margin-bottom: 0

.block-header
  margin: 0 0 15px

.display-options-container
  width: 100%

.files-selector
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height 300px
  border: 1px dashed $border-color-light
  text-align: center
  &:hover
    border-color: $border-color-dark
  #select-files
    z-index: -1000
    position: absolute
    opacity: 0

.default-button
  border: 1px solid $border-color-light
  border-radius: 5px
  padding: 10px 15px
  background: transparent
  cursor: pointer
  &[disabled]
    border-color: $border-color-light
    cursor: auto
  &:hover
    &:not([disabled])
      border-color: $border-color-dark
